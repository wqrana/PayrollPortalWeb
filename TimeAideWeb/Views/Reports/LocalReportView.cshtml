@using ReportViewerForMvc;

@if (ViewBag.ReportView != null)
{

    @Html.ReportViewer(ViewBag.ReportView as Microsoft.Reporting.WebForms.ReportViewer)
}
<script>
    $(document).ready(function () {
        adjustReportLayout();
        $("#divLoadingReport").hide();
    });

    function adjustReportLayout() {
        // Adjusting the iframe Width onload event
        var iframe = document.getElementsByTagName('iframe');
        iframe[0].onload = function () {
            debugger;
            setTimeout(function () { iframe[0].style.width = "100%"; }, 2000);
            
            console.log(iframe[0].style.width);
        }
    }
     
</script>
