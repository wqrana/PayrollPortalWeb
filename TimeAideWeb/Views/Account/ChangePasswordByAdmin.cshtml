@model TimeAide.Web.Models.SetPasswordViewModel
<div id="ChangePasswordByAdmin_modal" class="modal custom-modal">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">

            <div class="mt-2 p-1">
                <div class="alert alert-primary" style="text-align:center;background-color: #00c5fb;border: 1px solid #00c5fb;">
                    <h4 style="display: inline;">Change Password</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <hr>
            </div>
            <div class="modal-body pt-0">

                <div class="row">

                    <div class="col-md-12">
                        @Html.HiddenFor(m => m.UserInformationId)
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label pr-0">@Html.DisplayNameFor(m=>m.NewPassword): <span class="text-danger">*</span></label>
                           @* @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-4 control-label" })*@
                            <div class="col-md-7">
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label pr-0">@Html.DisplayNameFor(m => m.ConfirmPassword): <span class="text-danger">*</span></label>
                            @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })*@
                            <div class="col-md-7">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>

                    </div>
                </div>

                <div class="submit-section">
                    <button type="button" onclick="saveChangePasswordByAdmin();" class="btn btn-primary submit-btn">Save</button>
                    <button type="button" class="btn btn-primary submit-btn" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                </div>

            </div>
        </div>
    </div>
</div>
